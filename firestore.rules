rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección 'contacts': permite crear y leer documentos
    // solo si el usuario está autenticado
    match /contacts/{contactId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null; // Añadimos la regla de lectura
      // Puedes añadir reglas para actualización y eliminación si es necesario
      // allow update: if request.auth != null;
      // allow delete: if request.auth != null;
    }

    // Mantener una regla para otras colecciones si las tienes,
    // o una regla por defecto más restrictiva
    match /{document=**} {
       // Por defecto, denegar todas las operaciones a menos que se especifique lo contrario
       allow read, write: if false;
    }
  }
}
