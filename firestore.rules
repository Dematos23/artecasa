rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colecci칩n 'contacts': permite crear y leer documentos
    // solo si el usuario est치 autenticado
    match /contacts/{contactId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null; // A침adimos la regla de lectura
      // Rules for update and delete if necessary
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Mantener una regla para otras colecciones si las tienes,
    // o una regla por defecto m치s restrictiva
    match /{document=**} {
       // Por defecto, denegar todas las operaciones a menos que se especifique lo contrario
       allow read, write: if false;
    }
  }
}
